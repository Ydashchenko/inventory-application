<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1><%= title %></h1>
            <div class="table-responsive">
                <% if (items.length > 0) { %>
                    <table class="table table-striped text-center">
                        <!-- Table header here -->
                        <thead>
                            <tr class="table-dark text-center">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% items.forEach((item, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><img src="/uploads/<%= item.image %>" width="50px" class="img-thumbnail"></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.description %></td>
                                    <td><%= item.price %>$</td>
                                    <td><%= item.amount %></td>
                                    <td>
                                        <a href="/item/<%= item._id %>/edit" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/item/<%= item._id %>/delete" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No items in this category.</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
