<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Category</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/category/create" method="POST" id="add-item-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="category-name">Name</label>
                            <input type="text" name="category-name" class="form-control form-control-lg" placeholder="Enter category name" required>
                        </div>
                        <div class="mb-3">
                            <label for="category-description">Description</label>
                            <input type="text" name="category-description" class="form-control form-control-lg" placeholder="Describe category" required>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit-category" value="Add Category" class="btn btn-primary btn-lg" required>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>